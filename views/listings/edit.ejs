<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-3">
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="p-4 border rounded shadow bg-light needs-validation" 
        novalidate enctype="multipart/form-data">
        <h2 class="text-center mb-4"style="color: rgb(221, 49, 10); font-size: 2rem; font-weight: 500; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">Edit Listing</h2>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" name="listing[title]" 
                    id="title" value="<%= listing.title %>" 
                    required 
                    class="form-control">
                    <label for="title">Title</label>
                    <div class="invalid-feedback">
                        Please enter valid information
                      </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="number" name="listing[price]" 
                    id="price" value="<%= listing.price %>" 
                    required 
                    class="form-control">
                    <label for="price">Price</label>
                    <div class="invalid-feedback">
                        Please enter valid information
                      </div>
                </div>
            </div>

            <div>
                <img src="<%= original %>" style="width: 150px; height: 100px; object-fit: cover;">
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="file" name="listing[image]" 
                    id="image"  
                    class="form-control">
                    <label for="image">New Image URL</label>
                    <div class="invalid-feedback">
                      </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" name="listing[location]" 
                    id="location" value="<%= listing.location %>" 
                    required 
                    class="form-control">
                    <label for="location">Location</label>
                    <div class="invalid-feedback">
                        Please enter valid information
                      </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" name="listing[country]" 
                    id="country" value="<%= listing.country %>" 
                    required 
                    class="form-control">
                    <label for="country">Country</label>
                    <div class="invalid-feedback">
                        Please enter valid information
                      </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea name="listing[description]" 
                    id="description" class="form-control" 
                    style="height: 100px;" required><%= listing.description %></textarea>
                    <label for="description">Description</label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-danger btn-sm w-auto fw-bold px-5">EDIT</button>
        </div>
        
        
    </form>
</div>
