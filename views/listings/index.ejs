<% layout("/layouts/boilerplate") %>
<body>
    <h3 class="text-center mb-2 " style="color: rgb(221, 49, 10); font-size: 2rem; font-weight: 500; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; margin-top: 15px;">All Listings</h3>
    
    <div class="row row-cols-xxl-4 row-cols-xl-3 row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%=listing._id%> " class="listings-card">
          <div class="card col ">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"style="height: 15rem;"/>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
              </p>
            </div>
          </div>
        </a>
          <% } %>
    </div>
</body>
</html>

